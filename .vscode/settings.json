{
  "editor.codeActionsOnSave": ["source.fixAll.format", "source.fixAll.eslint"],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "eslint.codeActionsOnSave.rules": [
    "!@typescript-eslint/*",
    "!import/default",
    "!import/extensions",
    "!import/no-extraneous-dependencies",
    "!import/export",
    "*"
  ],
  "eslint.execArgv": ["--max-old-space-size=16384"],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "json",
    "typescript",
    "typescriptreact",
    "yaml"
  ],
  "json.format.enable": false,
  "javascript.format.enable": false,
  "typescript.format.enable": false,
  "git.autofetch": true,
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/*.lock": true,
    "**/.git": true,
    "**/.yarn": true,
    "**/dist": true,
    "**/cdk.out": true,
    "**/.cache": true,
    "package-lock.json": true
  },
  "files.watcherExclude": {
    "**/node_modules": true,
    "**/*.lock": true,
    "**/.git": true,
    "**/.yarn": true,
    "**/dist": true,
    "**/cdk.out": true,
    "**/.cache": true,
    "package-lock.json": true
  }
}
